<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
  <% if signed_in? %>
  Not sure why you are here, <%=current_user.name%>. You should go <%=link_to 'home', root_path %>.
  <% else %>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <p>Recover Username/Password <%= link_to "Click Here", "#" %></p>
  <% end %>

  </div>
</div>
