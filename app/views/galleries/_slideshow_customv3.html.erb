

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
<% 
@allassets = Asset.all 
count = 0
%>
    <% for asset in @allassets %>
      <% if @gallery.assets.include?(asset) %>      
        <li data-target="#carousel-example-generic" data-slide-to="<%=count %>"></li>
      <% count = count+1
      end %>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <%  @allassets.each_with_index do |asset, index| %>
      <% if @gallery.assets.include?(asset) %>      
      <div class="item <%= 'active' unless index !=0 %>">
          <img src="<%=asset.image(:large) %>" title="<%=asset.caption%>" /> 
         <div class="carousel-caption">
          <h4><%=asset.name%></h4><p><%=asset.caption %></p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<script>
  $('.carousel').carousel({ 
    interval: 2000}
    );
</script>


