<% provide(:title, "Update Gallery") %>

<div class="subtitle"><%=@gallery.title %> by <%=User.find(@gallery.user_id).name %></div>
<h1>Update your gallery</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@gallery) do |f| %>
       
        <%=render 'shared/error_messages', thing: @gallery%>
		<%=render 'gallery_form', f:f   , allassets: @allassets , usedsortedassets: @usedsortedassets %>

      <a href="#" id="assetsubmit">click</a>
      <%= f.submit class: "btn btn-small btn-primary" %> <%=link_to 'Cancel', current_user , class: "btn btn-small btn-secondary"%> 
    <% end %>

    
  </div>
</div>