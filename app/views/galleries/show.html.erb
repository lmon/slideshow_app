<% provide(:title, @gallery.title) %>
<div class="row galleryviewer" >
	<aside class="span4">
    <%if user_has_privileges @gallery.user_id %>
        <p><%if limitcheck? 'assets' %>
        <%=link_to 'Upload images', new_asset_path , class: "btn btn-small btn-secondary"%>
        <%else%>
        You have reached the maximum number of Assets
        <%end%></p> 

        <span class="subtitle">
        <%=link_to 'Edit', edit_gallery_path(@gallery) , class: "btn btn-small btn-secondary"%>
         
        </span>
    <% end %>

  </aside>
	<section>
  	<div class="subtitle">Gallery Viewer
    </div>

      <h1><%= @gallery.title %></h1>
      
      <div>
      Friendly Name:  <%= gallery_path(@gallery) %>
      </div>
      
       <div>
        Private? <%= @gallery.private %>
      </div>
       <div>
        Order: <%= @gallery.asset_order %>
      </div>
      
      <p>Has Assets: Count: <%=@gallery.assets.count %></p>
       <div class="slider-wrapper theme-default">
            <div class="ribbon"></div>
            <div id="sliderArea" class="ramblingSlider adaptingSlider">   
             <% for asset in Asset.all %>
                <% if @gallery.assets.include?(asset) %>
                    <span><%=asset.caption%></span>
                   <%= image_tag asset.image(:large), :title=>asset.caption  %> 
                <% end %>
             <% end %>
            </div>     
            <%if user_has_privileges @gallery.user_id %>

             <p><%if limitcheck? 'assets' %>
              <%=link_to 'Upload  images', new_asset_path %>
              <%else%>
              You have reached the maximum number of Assets
              <%end%></p> 
            <% end %>
      </div>
    </section>
</div>

