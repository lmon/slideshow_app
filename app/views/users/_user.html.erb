<li id="user_<%= user.id %>">
  <div class="span3"><h5><%= link_to user.name, user %>
        <% if (current_user && current_user.admin?)  %>      
		 <small>(<%= user.email %>)</small>
		 <% end %></h5>
	</div>	 
	<%if user_has_privileges user.id %>
	  <div class="span1"><%= link_to 'Edit', edit_user_path(user) , class: "btn btn-small btn-secondaary"%></div>
	<% end %>     

        <% if (current_user && current_user.admin?)  && !current_user?(user) %>      
    <div class="span1"><%= link_to 'Destroy', user, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-secondaary" %></div>
      <% end %>     
</li>