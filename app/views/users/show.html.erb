<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
      <% if current_user == @user  %>
       <%= link_to 'Create New Gallery', new_gallery_path , class: "btn btn-small btn-secondary"%> 
      <% end %>
    </section>
  </aside>
  
  <div class="span8">
    <% if @user.galleries.any? %>
      
      <h3>My Galleries (<%= @user.galleries.count %>)</h3>
      
      <ol class="galleries">
        <%= render @galleries %>
      </ol>

      <%= will_paginate @galleries %>
    <% else %>
    Sorry nothing to display.   <% if current_user == @user  %>
       <%= link_to 'Create a new one', new_gallery_path  %>.
      <% end %>
    <% end %>
  </div>

</div>