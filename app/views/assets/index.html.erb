<% provide(:title, 'Asset Listing') %>
<h1>Listing assets for <%= current_user.name %> (<%= @assets.count %>) </h1>

<%= will_paginate %>

<div class="container">
  <ul class="assets">
  <%= render @assets %>
  </ul>
</div>

<%= will_paginate %>

<div class="container">
 	<p><%if limitcheck? 'assets' %>
        <%=link_to 'Upload images', new_user_asset_path(current_user) , class: "btn btn-small btn-secondary"%>
        <%else%>
        You have reached the maximum number of Assets
        <%end%></p> 
</div>
