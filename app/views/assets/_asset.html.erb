<li>
  <span class="content"><%= link_to asset.name, asset %> <br />
   		<span class="timestamp">
	    Uploaded on <%= time_ago_in_words(asset.created_at) %> ago by 
	    	<span class="username"><%= link_to User.find(asset.user_id).name, asset_path(asset.user_id) %>
	    	</span>
		</span>
	</span>
	<% if (current_user && (current_user.id == asset.user_id)) || (current_user && current_user.admin?)  %>
	<span>    
	    <%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-secondary" %>
  <%= link_to 'Edit', edit_asset_path(asset) , class: "btn btn-small btn-secondary"%> 
	</span>
<% end %>  
  
</li>